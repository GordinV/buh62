	Select cursorLoppsaldo
&&	Sum (cursorAlgsaldo.deebet - cursorAlgsaldo.kreedit) for left (alltrim(konto),len(cKontogrupp))= cKontogrupp to lnSaldo
&&	lnSaldo = lnSaldo + lnDeebet - lnKreedit
