	nimetus c(254),eelarve_kinni n(14,2),;
	 eelarve_parandatud n(14,2), ;
	 tegelik n(14,2),;
	 eelarve_kassa_kinni n(14,2),;
	eelarve_kassa_parandatud n(14,2),;  
	kassa n(14,2),;
	parasutus c(254) null, parregkood c(20) null )
	
